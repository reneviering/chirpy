{
  "name": "chirpy",
  "version": "1.0.0",
  "private": true,
  "description": "A simple twitterwall made with React, Flux, Node and <3",
  "main": "index.js",
  "scripts": {
    "build-js": "node ./node_modules/webpack/bin/webpack",
    "build-js:watch": "node ./node_modules/webpack/bin/webpack --watch",
    "build-css": "node ./node_modules/node-sass/bin/node-sass --output-style compressed --source-map true assets/sass/main.scss dist/main.css",
    "build-css:watch": "node ./node_modules/node-sass/bin/node-sass --output-style compressed --source-map true assets/sass/main.scss dist/main.css --watch",
    "develop": "npm run build-js && npm run build-css && node index.js",
    "start": "node index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/revrng/chirpy.git"
  },
  "author": "RenÃ© Viering",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/revrng/chirpy/issues"
  },
  "homepage": "https://github.com/revrng/chirpy#readme",
  "dependencies": {
    "babel-core": "^6.1.21",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-react": "^6.1.18",
    "bootstrap": "^3.3.5",
    "dotenv": "^1.2.0",
    "hapi": "^11.1.0",
    "inert": "^3.2.0",
    "node-sass": "^3.4.2",
    "react": "^0.14.2",
    "react-dom": "^0.14.2",
    "socket.io": "^1.3.7",
    "twit": "^2.1.1",
    "webpack": "^1.12.6"
  },
  "devDependencies": {
    "babel-loader": "^6.1.0"
  }
}
